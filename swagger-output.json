{
  "swagger": "2.0",
  "info": {
    "title": "Banking Application API",
    "description": "API for user and admin operations in the banking application.",
    "version": "1.0.0"
  },
  "host": "localhost:4000",
  "basePath": "/api",
  "paths": {
    "/auth/register": {
      "post": {
        "description": "Register a new user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "john_doe"
                },
                "accNo": {
                  "type": "string",
                  "example": "12345678"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                }
              },
              "required": ["username", "accNo", "password"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "description": "User login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "accNo": {
                  "type": "string",
                  "example": "12345678"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                }
              },
              "required": ["accNo", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Logged in successfully"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/admin/login": {
      "post": {
        "description": "Admin login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "accNo": {
                  "type": "string",
                  "example": "admin123"
                },
                "password": {
                  "type": "string",
                  "example": "adminpass"
                }
              },
              "required": ["accNo", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Admin logged in successfully"
          },
          "401": {
            "description": "Invalid account number or password"
          }
        }
      }
    },
    "/admin/deposit": {
      "post": {
        "description": "Deposit money into a user's account",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "accNo": {
                  "type": "string",
                  "example": "12345678"
                },
                "amount": {
                  "type": "number",
                  "example": 1000
                }
              },
              "required": ["accNo", "amount"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Deposit successful"
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/admin/withdraw": {
      "post": {
        "description": "Withdraw money from a user's account",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "accNo": {
                  "type": "string",
                  "example": "12345678"
                },
                "amount": {
                  "type": "number",
                  "example": 500
                }
              },
              "required": ["accNo", "amount"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Withdrawal successful"
          },
          "400": {
            "description": "Bad request or insufficient funds"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/admin/transactions/{accNo}": {
      "get": {
        "description": "Get transaction history of a user",
        "parameters": [
          {
            "name": "accNo",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Account number of the user",
            "example": "12345678"
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction history retrieved successfully"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/v1/deposit": {
      "post": {
        "description": "User deposit money into their account",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "amount": {
                  "type": "number",
                  "example": 500
                }
              },
              "required": ["amount"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Deposit successful"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/v1/withdraw": {
      "post": {
        "description": "User withdraw money from their account",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "amount": {
                  "type": "number",
                  "example": 300
                }
              },
              "required": ["amount"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Withdrawal successful"
          },
          "400": {
            "description": "Bad request or insufficient funds"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/v1?acc-no": {
      "get": {
        "description": "Get user details by account number",
        "parameters": [
          {
            "name": "accNo",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Account number of the user",
            "example": "12345678"
          }
        ],
        "responses": {
          "200": {
            "description": "User details retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "john_doe"
                },
                "accNo": {
                  "type": "string",
                  "example": "12345678"
                },
                "balance": {
                  "type": "number",
                  "example": 1500.00
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  }
}